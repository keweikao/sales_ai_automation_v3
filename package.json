{
  "name": "Sales_ai_automation_v3",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/node": "^22.13.14",
      "@cloudflare/workers-types": "^4.20251213.0",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.9",
      "alchemy": "^0.82.1",
      "@orpc/client": "^1.12.2"
    }
  },
  "type": "module",
  "scripts": {
    "prepare": "lefthook install",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "typecheck": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @Sales_ai_automation_v3/db db:push",
    "db:studio": "turbo -F @Sales_ai_automation_v3/db db:studio",
    "db:generate": "turbo -F @Sales_ai_automation_v3/db db:generate",
    "db:migrate": "turbo -F @Sales_ai_automation_v3/db db:migrate",
    "db:seed": "bun run packages/db/src/seed.ts",
    "migration:dry-run": "DRY_RUN=true bun run scripts/migration/index.ts",
    "migration:run": "bun run scripts/migration/index.ts",
    "migration:verbose": "VERBOSE=true bun run scripts/migration/index.ts",
    "migration:validate": "bun run scripts/migration/validate.ts",
    "migration:rollback": "bun run scripts/migration/rollback.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/services tests/slack-bot",
    "test:integration": "vitest run tests/api",
    "test:api": "vitest run tests/api",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:performance": "vitest run tests/performance",
    "test:coverage": "vitest run --coverage",
    "test:all": "bun run test:unit && bun run test:integration && bun run test:e2e",
    "start:server": "NODE_ENV=production bun run apps/server/src/index.ts",
    "preview": "bun run build && bun run start:server",
    "lint": "bun x ultracite check",
    "fix": "bun x ultracite fix",
    "format": "bun x ultracite fix"
  },
  "dependencies": {
    "@Sales_ai_automation_v3/env": "workspace:*",
    "@anthropic-ai/claude-code": "^2.1.27",
    "@aws-sdk/client-s3": "^3.967.0",
    "@google-cloud/storage": "^7.18.0",
    "@google/generative-ai": "^0.24.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "firebase-admin": "^13.6.0",
    "pg": "^8.16.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@Sales_ai_automation_v3/config": "workspace:*",
    "@biomejs/biome": "2.3.11",
    "@cloudflare/workers-types": "catalog:",
    "@neondatabase/serverless": "^1.0.2",
    "@playwright/test": "^1.50.0",
    "@slack/web-api": "^7.13.0",
    "@trpc/client": "^11.0.0",
    "@trpc/server": "^11.0.0",
    "@types/node": "catalog:",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^3.1.0",
    "lefthook": "^2.0.13",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "ultracite": "7.0.10",
    "vitest": "^3.1.0",
    "wrangler": "^4.59.1"
  },
  "packageManager": "bun@1.3.5",
  "resolutions": {
    "@smithy/types": "4.12.0"
  }
}
