{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Skill",
      "Bash(printf:*)",
      "Bash(git *)",
      "Bash(bun *)",
      "Bash(bunx *)",
      "Bash(gh *)",
      "Read",
      "Grep",
      "Glob"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bun x ultracite fix \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
