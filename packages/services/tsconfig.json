{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022", "WebWorker"],
    "types": ["node", "@cloudflare/workers-types"],
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "paths": {
      "@Sales_ai_automation_v3/shared": ["../shared/src"],
      "@Sales_ai_automation_v3/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/agent/**/*",
    "src/mcp/**/*",
    "src/ops/**/*",
    "src/**/__tests__/**/*",
    "src/**/*.test.ts"
  ]
}
